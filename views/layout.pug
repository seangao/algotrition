doctype html
html
  head
    title= title
    script(src='https://code.jquery.com/jquery-3.3.1.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/js/bootstrap-select.min.js')
    script(src='/javascripts/algotrition.js')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.7.2/css/all.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/css/bootstrap-select.min.css')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="apple-touch-icon" sizes="114x114" href="/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png")
    link(rel="manifest" href="/site.webmanifest")
    link(rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5")
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="theme-color" content="#ffffff")
  body
    nav.fixed-top.navbar.navbar-expand-md.navbar-dark.bg-dark.text-light
      .container
        .navbar-header
          button.navbar-toggler(type='button' data-toggle='collapse' data-target='#collapsibleNavbar')
            span.navbar-toggler-icon
          a.navbar-brand(class='nav-link' href='/')
            img(src='/images/algo_logo.png' alt='Expand' height='30px')
        div.collapse.navbar-collapse#collapsibleNavbar
          ul.nav.navbar-nav.mr-auto
            li(class='nav-item'+(title === 'Home' ? ' active' : undefined)): a.nav-link(href='/') Home
            |
            |
            li(class='nav-item'+(title === 'Calendar' ? ' active' : undefined)): a(class='nav-link' href='/calendar') Calendar
            |
            |
            if (user)
              li(class='nav-item'+(title === 'Recipes' ? ' active' : undefined)): a(class='nav-link' href='/recipes') Recipes
              |
              |
            li(class='nav-item'+(title === 'Plan Generator' ? ' active' : undefined)): a(class='nav-link' href='/generator') Generate meal plan
          ul.nav.navbar-nav.navbar-right.bg-dark
            if (user)
              li.nav-item.dropdown(class=(title === 'Account' ? 'active' : undefined))
                a.nav-link.dropdown-toggle(href='#' data-toggle='dropdown' role='button') Profile
                  span.caret
                .dropdown-menu
                  a.nav-item.dropdown-item(href='/profile') Account...
                  a.nav-item.dropdown-item(href='/logout') Log out
            else
              li.nav-item: a.nav-link(href='/login') Log in
              li.nav-item: a.nav-link(href='/register') Register
    .container
      block content
