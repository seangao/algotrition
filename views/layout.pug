doctype html
html
  head
    title= title
    script(src='https://code.jquery.com/jquery-3.3.1.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/js/bootstrap-select.min.js')
    script(src='/javascripts/algotrition.js')
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.7.2/css/all.css')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.2/css/bootstrap-select.min.css')
    meta(name='viewport', content='width=device-width, initial-scale=1')
  body
    div(class='header_bar')
      a(href='/')
        img#header_logo
    nav(class='navbar navbar-expand-md navbar-dark bg-dark' id='navbar_container')
      button(class='navbar-toggler' type='button' data-toggle='collapse' data-target='#collapsibleNavbar')
        span(class='navbar-toggler-icon')
      div(id='collapsibleNavbar' class='menu_bar collapse navbar-collapse')
        ul(id='main_menu' class='navbar-nav mr-auto')
          if (user)
            li(class='nav-item active'): a(class='nav-link' href='/profile') My profile
            |
            |
            li(class='nav-item active'): a(class='nav-link' href='/generator') Meal plan generator
            |
            |
            li(class='nav-item active'): a(class='nav-link' href='/calendar') Calendar
            |
            |
            li(class='nav-item active'): a(class='nav-link' href='/recipes') My recipes
            |
            |
            if (user)
              li(class='nav-item active'): a(class='nav-link' href='/logout') Logout
          else
            li.nav-item.active: a.nav-link Welcome to Algotrition! Please Log in or Register.
    block content
