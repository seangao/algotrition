extends layout

block content
  br
  br
  h1= title
  
  .container
    each category in user
        h5.card-header.d-flex
          a.mr-auto.text-secondary(data-toggle="collapse" href="#category"+category.id)= category.name
        .card-text.collapse.text-secondary.show(id="category"+category.id)
          each item in category.items
            p= item.name + ": " + item.value
              
